.countlist ,.countlist td,.countlist th{border: 1px solid #ddd;border-collapse: collapse;}
.countlist td, .countlist th {border-right: 0;padding:5px 8px;line-height:25px;color:#535353;cursor:pointer}
.countlist td,.countlist th{text-align:center;font-size:12px;line-height:24px;}
.countlist th{font-size:14px;background:#ededed;}
.countlist th.title{font-size:16px;font-weight:bold;}
.countlist tr.even{background:#f7f7f7;}
.countlist input{width:100%;height:100%;text-indent:0.5em;border:0;background:none;}
.countlist tr td.select{background:url(../images/sichuan/u229_normal.png) no-repeat center center;}
.countlist .edit{float:right;margin:5px;color:#f60;}