.form-list{position:relative;font-size:12px; line-height:1.5; font-family:Tahoma;margin:0 auto;width:380px;margin-top:35px;color:#333;}/*这里使用Tahoma字体使表单对齐*/
.form-list .form-position-right{position:absolute; right:10px; top:0;}
.form-list .form-txt{height: 25px; padding-left:3px; line-height:20px;background-color:#FFFFFF; border:1px solid #B9B9B9; vertical-align:middle;width:210px;}
.form-list .row{margin-bottom:10px;}/*每行间距*/
.form-list input{vertical-align:middle;}
.form-list .form-label{display:inline-block; width:110px; *display:inline; *zoom:1; text-align:right; vertical-align:middle;}/*width控制左列宽,text-align设置对齐方式*/
.form-list label.vt{vertical-align:top;}
.form-list label.vb{vertical-align:bottom;}
.form-list .form-label em{color:red; margin-right:5px; font-family:simsun; font-style:normal;}
.form-list .collection{display:inline-block; *display:inline; *zoom:1; vertical-align:middle;}
.form-list .rc{ margin-right:10px;}
.form-list .rc input{vertical-align:text-top; width:13px; height:15px;  margin-right:5px;}
.form-list select{height:22px; border:1px solid #bbb; vertical-align:middle;font-family:Tahoma; font-size:12px;}
.form-list .textarea{padding:3px; border:1px solid #bbb; width:400px; height:60px; font:12px/1.5em Tahoma;overflow-y:auto;}
.form-list span.mark{color:red; padding-left:10px;}
.form-list p.mark{color:red; padding-left:0; padding-top:3px;}
.form-list .form-file{vertical-align:middle; *height:22px;}
.form-list .form-btn{overflow:visible; padding:3px 10px;}

#announcement{padding:0;margin:0;z-index:99999;line-height:22px;background:#FFFBD6;color:#333;border:1px solid #C5B270;position:absolute;top:24px;left:7px;}
#announcementBody{padding:0 40px 0 20px;position:relative;}
#announcementBody a{color:blue;text-decoration:underline;}
#announcementBody a:hover{text-decoration:none;}
#announcementClose{position:absolute;top:0px;right:3px;width:20px;}
#announcementClose a{background:url(../images/guide/close.gif) no-repeat left;display:block;float:left;width:9px;height:22px;}
#announcementClose a:hover{background:url(../images/guide/close_on.gif) no-repeat left;}
