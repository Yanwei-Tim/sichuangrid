/* ------ general
-----------------------------------------------*/

body {
}

#content {
width:636px;
position:relative;
}
.bubble{position:absolute;right:-200px;bottom:50px;display:none;}

/* ------ mobilymap
-----------------------------------------------*/

.loader {
background:url(../img/loader.gif) no-repeat center #fff;
}

.imgCaption {
bottom:0;
left:0;
color:#fff;
opacity:.6;
background:#333;
padding:10px;
width:636px;
text-align:center;
font-size:16px;
text-transform:uppercase;
text-shadow:1px 1px 0 #111;
font-weight:bold;
}

.bubble .close {
display:block;
text-indent:-9999px;
position:absolute;
top:5px;
right:5px;
width:15px;
height:21px;
outline:none;
background:url(../img/close.png) no-repeat;
cursor:pointer;
}

.mapNav {
width:84px;
height:84px;
}

.navBtn {
position:absolute;
background-repeat:no-repeat;
width:32px;
height:32px;
outline:none;
text-indent:-9999px;
display:block;
z-index:7px;
}

.navBtn0 {
top:0;
left:26px;
background-image:url(../img/navtop.png);
}

.navBtn1 {
top:26px;
right:0;
background-image:url(../img/navright.png);
}

.navBtn2 {
bottom:0;
left:26px;
background-image:url(../img/navbottom.png);
}

.navBtn3 {
top:26px;
left:0;
background-image:url(../img/navleft.png);
}

/* ------ example1
-----------------------------------------------*/

.europe_map {
width:636px;
height:500px;
}

.point {
display:block;
text-indent:-9999px;
width:32px;
height:44px;
outline:none;
background:url(../img/marker.png) no-repeat;
_background:url(../img/marker.gif) no-repeat;
cursor:pointer;
overflow:hidden;
}

.bubble {
padding:10px 0;
background:#fff;
border:1px solid #024786;
color:#fff;
width:181px;
height:auto;
overflow:hidden;
zoom:1;
font-size:12px;
}


.bubble span {
display:block;
font-size:12px;
font-weight:bold;
color:#073C68;
text-align:left;
text-indent:10px;
line-height:18px;
}

.bubble strong {
color:#ff6600;
text-align:left;
}

.bubble img {
vertical-align:bottom;
}


ul.map_buttons,
ul.map_buttons li {
display:block;
list-style:none;
padding:0;
margin:0;
}

ul.map_buttons li {
float:left;
}

.map_buttons a {
-moz-border-radius:8px;
-webkit-border-radius:8px;
border-radius:8px;
background:#EDEDED;
color:#111;
display:block;
float:left;
font-size:11px;
line-height:28px;
margin-right:4px;
outline:none;
padding:0 15px;
text-decoration:none;
}
.map_buttons a:hover {
background:#111;
color:#fff;
}

a {
color:#fff;
}



